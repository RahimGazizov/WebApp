@model List<Практика.Models.Credit>
@{
    var user = Context.Session.GetInt32("Role");
}
<div class="conteiner">
    <h1>Кредит</h1>
    <div class="action">
        <a href="/Credit/Insert" class="btn">Добавить кредит</a>
        <a href="/Home/Index" class="btn">Вернуться</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Сумма кредита</th>
                <th>Срок</th>
                <th>Процент</th>
                <th>Пения</th>
                <th>Дата</th>
                <th>Описание</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Summa</td>
                        <td>@item.Year</td>
                        <td>@item.Precent</td>
                        <td>@item.Fine</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@item.Description</td>
                        <td>
                            @if (user == 3 || user == 12)
                            {
                                <form method="post" action="/Credit/Delete/@item.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                    <button class="btn_del">Удалить</button>
                                </form>
                            }
                            else
                            {
                                <form>
                                    <button type="button" class="btn_none" disabled>Удалить</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6">Нет данных</td></tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }

    .conteiner {
        width: 80%;
        margin: 80px auto;
        padding: 15px;
        background-color: whitesmoke;
        border-radius: 15px;
        box-shadow: 0 8px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

    table {
        width: 100%;
        margin: 15px auto;
    }

        table th, table td {
            padding: 12px;
            border: 1px solid gray;
            font-size: 16px;
        }

    .action {
        display: flex;
        justify-content: left;
        gap: 10px;
    }

    .btn {
        padding: 12px;
        border-radius: 5px;
        text-decoration: none;
        background-color: beige;
        color: black;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn_del {
        padding: 12px;
        border-radius: 5px;
        color: black;
        cursor: pointer;
        border: none;
    }

    .btn_del {
        transition: all 0.2s ease-in-out /* Когда будут изменяться любые свойства (all), делай это плавно 0.2s — длительность: 0.2 секунды ease-in-out — тип ускорения: */
    }

        .btn_del:hover {
            transform: scale(1.05); /* свойство, которое может трансформировать элемент scale(1.05) — увеличивает элемент на 5% при наведении мыши */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            background-color: red;
            color: white;
        }

    .btn_none {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        background-color: gray;
        color: white;
        border: none;
        cursor: no-drop;
    }
</style>