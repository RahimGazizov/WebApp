@model Employees
@{
    var post = ViewBag.Post as List<SelectListItem>;
    var user = Context.Session.GetInt32("Role");
}
<div class="conteiner">
    <h1>Редоктирование сотрудника</h1>
    @if (TempData["Error"] != null)
    {
        <div>
            @TempData["Error"]
        </div>
    }
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id">
        @if (user == 3)
        {
            <label>Имя</label>
            <input type="text" asp-for="Name" required />
            <label>Должность</label>
            <select asp-for="PostId">
                @foreach (var item in post)
                {

                    <option value="@item.Value">@item.Text</option>
                }
            </select>

            <label>Адрес</label>
            <input type="text" asp-for="Address" required />
            <label>Телефон</label>
            <input type="text" asp-for="Phone" required />
            <label>Логин</label>
            <input type="text" asp-for="Login" required />
            <label>Пароль</label>
            <input type="text" asp-for="Password" required />
        }
        else
        {
            <input type="hidden" asp-for="Name" required />
            <select asp-for="PostId" asp-items="@post" disabled></select>
            <input type="hidden" asp-for="PostId">
            <input type="hidden" asp-for="Address" required />
            <input type="hidden" asp-for="Phone" required />
            <input type="hidden" asp-for="Login" required />
            <input type="hidden" asp-for="Password" required />
        }
        @if (user == 3 || user == 11)
        {
            <label>Зарплата</label>
            <input type="number" asp-for="Salary" required />
        }
        <div class="action">
            <button type="submit" class="btn_add">Обновить</button>
            <a href="/Employees/Index" class="btn_back">Вернуться</a>
        </div>
    </form>
</div>
<style>
    body {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }

    .conteiner {
        width: 60%;
        margin: 50px auto;
        padding: 15px;
        background-color: ghostwhite;
        border-radius: 12px;
        box-shadow: 0 6px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    form {
        width: 60%;
        margin: 10px auto;
        display: flex;
        flex-direction: column;
    }

    .action1 {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn_back {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        color: black;
        background-color: #F0F0F0;
        transition: all 0.2s ease-in-out;
    }

        .btn_back:hover {
            transform: scale(1.02);
            background-color: green;
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_add {
        padding: 12px;
        border: none;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        border: none;
    }

        .btn_add:hover {
            transform: scale(1.02);
            background-color: green;
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    input, select, label {
        margin-bottom: 12px;
    }

    input, select {
        padding: 12px;
        border: none;
        border-radius: 5px;
    }

    label {
        text-align: left;
    }
</style>