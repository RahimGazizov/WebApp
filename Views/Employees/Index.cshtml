@model List<Employees>
@{
    var user = Context.Session.GetInt32("Role");
}
<div class="conteiner">
    <h1>Сотрудники</h1>
    <div class="action">
        <a href="/Home/Index" class="btn_back">Вернуться</a>
        <a href="/Employees/Insert" class="btn_back">Добавить сотрудника</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Имя</th>
                <th>Должность</th>
                <th>Зарплата</th>
                <th>Адресс</th>
                <th>Телефон</th>
                <th>Логин</th>
                <th>Пароль</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Post</td>
                    <td>@item.Salary</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Login</td>
                    <td>@item.Password</td>
                    <td>
                        <div class="action1">
                            @if (user == 3)
                            {
                                <form method="post" action="/Employees/Delete/@item.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                    <button class="btn_del">Удалить</button>
                                </form>
                            }
                            else
                            {
                                <form>
                                    <button type="button" class="btn_none" disabled>Удалить</button>
                                </form>
                            }
                            @if (user == 3 || user == 11)
                            {
                                <form method="get" action="/Employees/Edit/@item.Id">
                                    <button class="btn_edit">Редоктировать</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }

    .conteiner {
        width: 90%;
        margin: 50px auto;
        padding: 15px;
        background-color: ghostwhite;
        border-radius: 12px;
        box-shadow: 0 6px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    table {
        width: 100%;
        margin: 10px auto;
    }

        table th, table td {
            padding: 12px;
            border: 1px solid gray;
        }

        table th {
            background-color: whitesmoke;
        }

    .action {
        display: flex;
        justify-content: left;
        gap: 10px;
    }

    .action1 {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn_back {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        color: black;
        background-color: #F0F0F0;
        transition: all 0.3s ease-in-out;
    }

        .btn_back:hover {
            transform: scale(1.03);
            background-color: green;
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_edit {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        border: none;
    }

        .btn_edit:hover {
            transform: scale(1.1);
            background-color: green;
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_del {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        border: none;
    }

        .btn_del:hover {
            transform: scale(1.1);
            background-color: red;
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_none {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        background-color: gray;
        color: white;
        border: none;
        cursor: no-drop;
    }
</style>