@model List<PayCredit>
@{
    var user = Context.Session.GetInt32("Role");
}
<div class="conteiner">
    <h1>История оплаты за кредит</h1>
    <div class="action">
        @if (user == 3 || user == 12)
        {
            <a href="/PayCredit/Insert" class="btn">Оплатить за кредит</a>
        }
        else
        {
            <a href="javascript:void(0)" class="btn_none">Оплатить за кредит</a>
        }
        <a href="/Home/Index" class="btn">Вернуться</a>
    </div>
    <table>
        <thead>
            <tr>
                <td>Дата</td>
                <td>Часть кредита</td>
                <td>Процент</td>
                <td>Общая сумма</td>
                <td>Остаток кредита</td>
                <td>Просрочено</td>
                <td>Пени</td>
                <td>Итог</td>
                <td>Кредит</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.Pay</td>
                    <td>@item.Percent</td>
                    <td>@item.Total_Summ</td>
                    <td>@item.Summa</td>
                    <td>@item.Expired</td>
                    <td>@item.Fine</td>
                    <td>@item.Result</td>
                    <td>@item.Credit</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        font-family: Consolas;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }

    .conteiner {
        width: 90%;
        margin: 70px auto;
        padding: 15px;
        background-color: whitesmoke;
        border-radius: 15px;
        box-shadow: 0 8px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

    table {
        width: 100%;
        margin: 15px auto;
    }

        table th, table td {
            padding: 12px;
            font-size: 16px;
            border: 1px solid gray;
        }

        table th {
            background-color: lightgray;
        }

    .action {
        display: flex;
        justify-content: left;
        gap: 10px;
    }

    .btn {
        padding: 12px;
        background-color: cornflowerblue;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .btn_none {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        background-color: gray;
        color: white;
        border: none;
        cursor: no-drop;
    }
</style>