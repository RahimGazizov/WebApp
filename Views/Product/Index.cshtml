@model IEnumerable<Практика.Models.Product>
@{
    var user = Context.Session.GetInt32("Role");
}
<!DOCTYPE html>
<html>
<head>
    <title>Товары</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>

<body>
    <div class="container mt-4"></div>
    <h1>Продукты</h1>
    <div class="btn_action">
        @if (user == 2 || user == 3)
        {
            <a href="@Url.Action("Insert", "Product")" class="btn_in">Добавить продукт</a>
            <a href="@Url.Action("Index", "Production")" class="btn_bc">Произвести продукт</a>
        }
        else
        {
            <a href="javascript:void(0)" class="btn_none">Добавить продукт</a>
            <a href="javascript:void(0)" class="btn_none">Произвести продукт</a>
        }
        <a href="@Url.Action("Index", "Home")" class="btn_bc">Вернуться</a>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Продукт</th>
            <th>Единица_Измерения</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
        @foreach (var products in Model)
        {
            <tr>
                <td>@products.Name</td>
                <td>@products.Unit</td>
                <td>@products.Count</td>
                <td>@products.Price</td>
                <td>
                    <div class="actions">
                        @if (user == 2 || user == 3)
                        {
                            <form method="post" action="/Product/Delete/@products.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                <button type="submit" class="btn_danger">Удалить</button>
                            </form>
                            <form method="get" action="/Product/Edit/@products.Id">
                                <button type="submit" class="btn_ed">Редоктировать</button>
                            </form>
                        }
                        else{
                            <form>
                                <button type="button" class="btn_none" disabled>Удалить</button>
                            </form>
                            <form>
                                <button type="button" class="btn_none" disabled>Редоктировать</button>
                            </form>
                        }
                    </div>
                </td>

            </tr>
        }
    </table>

</body>
</html>
<style>
    h1 {
        text-align: center;
        margin-bottom: 15px;
    }

    .btn_danger {
        color: white;
        background-color: red;
        border: none;
        border-radius: 2px;
    }

    .btn_ed {
        color: white;
        background-color: yellowgreen;
        border: none;
        border-radius: 2px;
    }

    .actions {
        display: flex;
        flex-wrap: nowrap;
        justify-content: left;
        gap: 10px;
        width: 10%;
    }

    .btn_action {
        margin-bottom: 20px;
    }

    .btn_in {
        color: white;
        background-color: green;
        padding: 10px;
        text-decoration: none;
        text-align: center;
    }

    .btn_bc {
        color: white;
        background-color: darkblue;
        padding: 10px;
        text-decoration: none;
        text-align: center;
    }

    .btn_none {
        padding: 12px;
        text-decoration: none;
        background-color: gray;
        color: white;
        border: none;
        cursor: no-drop;
    }
</style>