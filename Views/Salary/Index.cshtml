@model List<Salary>
@{
    var yearList = ViewBag.Years as List<SelectListItem>;
    var monthList = ViewBag.Months as List<SelectListItem>;
    var user = Context.Session.GetInt32("Role");
}
<div class="head">
    <h1>Зарплата</h1>
    <div class="action">
        <a href="/Home/Index" class="btn_back">Вернуться</a>
        <a href="/Salary/Report" class="btn_back">Создать отчет</a>
    </div>
    <div class="list_action">
        <form id="submitForm" method="get" asp-action="Index">
            <select name="Year" class="list" onchange="this.form.submit()">
                <option>Выберите год</option>
                @foreach (var item in yearList)
                {
                    <option value="@item.Value" selected="@(item.Value == TempData["Year"]?.ToString())">@item.Text</option>
                }
            </select>
            <select name="Month" class="list" onchange="this.form.submit()">
                <option>Выберите год</option>
                @foreach (var item in monthList)
                {
                    <option value="@item.Value" selected="@(item.Value == TempData["Month"]?.ToString())">@item.Text</option>
                }
            </select>
        </form>
    </div>
    <div>
        <form method="post" asp-action="PaySalaries">
            <input type="hidden" name="Year" value="@TempData["Year"]">
            <input type="hidden" name="Month" value="@TempData["Month"]">
            <div>
                @if (user == 3 || user == 11)
                {
                    <button type="submit" class="btn_add">Выдать зарплату</button>
                }
                else
                {
                    <button type="button" class="btn_none" disabled>Выдать зарплату</button>
                }
            </div>
        </form>
    </div>
    <div style="margin-top:20px;"></div>
</div>
<div class="conteiner">
    @if (TempData["Error"] != null)
    {
        <div style="display: inline-block; background-color: red; color: white; font-size: 18px;margin-bottom: 15px;">
            @TempData["Error"]
        </div>
    }
    <table>
        <thead>
            <tr>
                <th>Сотрудник</th>
                <th>Оклад</th>
                <th>Закупка сырья(кол-во)</th>
                <th>Производство продукции(кол-во)</th>
                <th>Продажа продукции(кол-во)</th>
                <th>Общая сумма(участий)</th>
                <th>Бонус</th>
                <th>Итоговая зарплата</th>
                <th>Статус выдачи</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Employee</td>
                        <td>@item.BaseSalary</td>
                        <td>@item.PurchaseCount</td>
                        <td>@item.ProductionCount</td>
                        <td>@item.SaleCount</td>
                        <td>@item.TotalCount</td>
                        <td>@item.Bonus</td>
                        <td>@item.TotalSalary</td>
                        <td>@item.PayStatus</td>
                        <td>
                            @if (item.PayStatus == "невыплачено")
                            {
                                if (user == 11)
                                {
                                    <form method="get" action="/Salary/Edit/@item.Id">
                                        <button class="btn_edit">Редоктировать</button>
                                    </form>
                                }
                                else{
                                    <form>
                                        <button type="button" class="btn_none" disabled>Редоктировать</button>
                                    </form>
                                }
                            }
                            else
                            {
                                <button class="btn_none">Редоктировать нельзя</button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="9">Нет данных</td></tr>
            }
        </tbody>
    </table>
    <div class="total">Общая сумма:@ViewBag.Total_Sum</div>
</div>
<style>
    body {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }

    .head {
        width: 60%;
        margin: 50px auto;
        background-color: whitesmoke;
        border-radius: 15px;
        box-shadow: 0 6px 8px rgba(0,0,0,0.1);
        text-align: center;
        padding: 15px;
    }

    .list_action {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
        margin-bottom: 20px;
    }

    .list {
        padding: 15px;
        font-size: 16px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        border: none;
        border-radius: 5px;
    }

    .conteiner {
        width: 100%;
        margin: 20px auto;
        padding: 15px;
        background-color: whitesmoke;
        border-radius: 15px;
        box-shadow: 0 8px 10px rgba(0,0,0,0.1);
        text-align: center;
    }

    table {
        width: 100%;
        margin: 0px auto;
        table-layout: fixed; /* фиксированная ширина столбцов */
        word-wrap: break-word; /* перенос слов */
        text-align: center;
    }

        table td, table th {
            padding: 8px;
            font-size: 16px;
            border: 1px solid gray;
        }

        table th {
            background-color: lightgrey;
        }

    .total {
        text-align: left;
    }

    .btn_edit {
        padding: 6px 10px; /* убрал слишком большой padding */
        max-width: 100%; /* не превышать ширину ячейки */
        white-space: nowrap; /* запретить перенос текста в кнопке */
        overflow: hidden;
        text-overflow: ellipsis; /* если текста много — показать троеточие */
        border: none;
        border-radius: 5px;
        background-color: green;
        color: white;
        cursor: pointer;
        font-size: 14px; /* чуть поменьше размер шрифта */
        display: inline-block; /* чтобы не занимала всю ширину */
    }

    .btn_none {
        padding: 6px 10px; /* убрал слишком большой padding */
        max-width: 100%; /* не превышать ширину ячейки */
        white-space: nowrap; /* запретить перенос текста в кнопке */
        overflow: hidden;
        text-overflow: ellipsis; /* если текста много — показать троеточие */
        border: none;
        border-radius: 5px;
        background-color: lightgray;
        color: white;
        cursor: pointer;
        font-size: 14px; /* чуть поменьше размер шрифта */
        display: inline-block; /* чтобы не занимала всю ширину */
    }

    .action {
        margin-top: 10px;
        display: flex;
        justify-content: safe center;
        gap: 10px;
    }

    .btn_back {
        padding: 12px;
        border: none;
        border-radius: 5px;
        background-color: #F0F0F0;
        color: black;
        text-decoration: none;
    }

    .btn_add {
        padding: 12px;
        border: none;
        border-radius: 5px;
        background-color: lawngreen;
    }

    .btn_none {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        background-color: gray;
        color: white;
        border: none;
        cursor: no-drop;
    }
</style>