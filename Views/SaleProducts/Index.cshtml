@model List<SaleProducts>
@{
    var user = Context.Session.GetInt32("Role");
}
<div class="conteiner">
    <h1>Продажа продукции</h1>
    <div class="action">
        <a href="/Home/Index" class="btn_back">Вернуться</a>
        @if (user == 3 || user == 13)
        {
            <a href="/SaleProducts/Insert" class="btn_back">Продать продукт</a>
        }
        else{
            <a href="javascript:void(0)" class="btn_none">Продать продукт</a>
        }
    </div>
    <table>
        <thead>
            <tr>
                <th>Продукт</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Дата</th>
                <th>Сотрудник</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Count</td>
                    <td>@item.Sum</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.EmployeeName</td>
                    <td>
                        <div class="action">
                            <form method="post" action="/SaleProducts/Delete/@item.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                <button class="btn_del">Удалить</button>
                            </form>
                            <form method="get" action="/SaleProducts/Edit/@item.Id">
                                <button class="btn_edit">Редоктировать</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: aliceblue;
        margin: 0;
        padding: 0;
    }

    .conteiner {
        width: 80%;
        margin: 80px auto;
        padding: 15px;
        background-color: floralwhite;
        border-radius: 15px;
        box-shadow: 0 8px 12px rgba(0,0,0,0.1);
        text-align: center;
    }

    table {
        width: 100%;
        margin: 15px auto;
        text-align: center;
    }

        table th, table td {
            border: 1px groove, gray;
            padding: 12px;
            font-size: 16px;
        }

        table th {
            background-color: lightgray;
        }

    .action {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn_del {
        border: none;
        padding: 12px;
        background-color: red;
        color: white;
        border-radius: 5px;
    }

    .btn_edit {
        border: none;
        padding: 12px;
        background-color: green;
        color: white;
        border-radius: 5px;
    }

    .btn_back {
        padding: 12px;
        background-color: azure;
        color: black;
        text-decoration: none;
        border-radius: 5px;
    }

    .btn_none {
        padding: 12px;
        text-decoration: none;
        border-radius: 5px;
        background-color: gray;
        color: white;
        border: none;
        cursor: no-drop;
    }
</style>